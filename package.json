                                                                                                                        "express": "^4.18.2",
                                                                                                                            "cors": "^2.8.5",
                                                                                                                                "helmet": "^7.1.0",
                                                                                                                                    "compression": "^1.7.4",
                                                                                                                                        "dotenv": "^16.3.1",
                                                                                                                                            
                                                                                                                                                // Frontend dependencies
                                                                                                                                                    "react": "^18.2.0",
                                                                                                                                                        "react-dom": "^18.2.0",
                                                                                                                                                            "@tanstack/react-query": "^4.36.1",
                                                                                                                                                                "axios": "^1.6.2"
                                                                                                                                                                  },
                                                                                                                                                                    "devDependencies": {
                                                                                                                                                                        // Existing dev dependencies
                                                                                                                                                                            "coveralls": "^3.0.0",
                                                                                                                                                                                "eslint": "^8.56.0",
                                                                                                                                                                                    "eslint-config-prettier": "^9.1.0",
                                                                                                                                                                                        "eslint-plugin-prettier": "^5.1.2",
                                                                                                                                                                                            "istanbul": "^0.4.3",
                                                                                                                                                                                                "mocha": "^10.2.0",
                                                                                                                                                                                                    "prettier": "^3.2.4",
                                                                                                                                                                                                        "rimraf": "^5.0.5",
                                                                                                                                                                                                            "should": "^13.2.3",
