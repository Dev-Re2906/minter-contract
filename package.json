{
      "name": "watchpack-fullstack",
        "version": "1.0.0",
          "description": "Full-stack version of watchpack with enhanced capabilities",
            "main": "./lib/watchpack.js",
              "type": "module",
                "scripts": {
                    "start": "node server/index.js",
                        "dev": "concurrently \"npm run server\" \"npm run client\"",
                            "server": "nodemon server/index.js",
                                "client": "vite",
                                    "build": "npm run build:server && npm run build:client",
                                        "build:server": "tsc -p server/tsconfig.json",
                                            "build:client": "vite build",
                                                "test": "mocha",
                                                    "test:coverage": "istanbul cover node_modules/mocha/bin/_mocha",
                                                        "lint": "eslint .",
                                                            "format": "prettier --write .",
                                                                "prettier-files": "prettier \"lib/**.*\" \"test/**/*.js\" --write"
                                                                  },
                                                                    "repository": {
                                                                        "type": "git",
                                                                            "url": "git+https://github.com/yourusername/watchpack-fullstack.git"
                                                                              },
                                                                                "keywords": ["fullstack", "watchpack", "monitoring"],
                                                                                  "author": "Your Name",
                                                                                    "license": "MIT",
                                                                                      "bugs": {
                                                                                          "url": "https://github.com/yourusername/watchpack-fullstack/issues"
                                                                                            },
                                                                                              "homepage": "https://github.com/yourusername/watchpack-fullstack#readme",
                                                                                                "dependencies": {
                                                                                                    // Core watchpack dependencies
                                                                                                        "glob-to-regexp": "^0.4.1",
                                                                                                            "graceful-fs": "^4.1.2",
                                                                                                                
