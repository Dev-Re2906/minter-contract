                                                                                                                                                                                                                            "typescript": "^5.3.3",
                                                                                                                                                                                                                                "@types/node": "^20.11.19",
                                                                                                                                                                                                                                    "@types/express": "^4.17.21",
                                                                                                                                                                                                                                        "vite": "^5.1.0",
                                                                                                                                                                                                                                            "@vitejs/plugin-react": "^4.2.1",
                                                                                                                                                                                                                                                "concurrently": "^8.2.2",
                                                                                                                                                                                                                                                    "nodemon": "^3.0.2"
